<div class="container mt-5">

  <h2 class="text-center mb-4">
    <i class="fas fa-tasks"></i> <%= @task.title %>
  </h2>

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Task Details</h5>
      <p class="card-text"><%= @task.details %></p>

      <p class="font-weight-bold">
        <i class="fas <%= @task.completed ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' %>"></i>
        <%= @task.completed ? "This task is completed" : "This task is not completed" %>
      </p>

      <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-warning" %>
    </div>
  </div>

  <div class="text-center mt-3">
    <%= link_to tasks_path, class: "btn btn-secondary" do %>
      <i class="fas fa-arrow-left"></i> Back to List
    <% end %>
  </div>
</div>
