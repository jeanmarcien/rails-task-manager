<div class="container mt-5">

  <h1 class="text-center mb-4">
    <i class="fas fa-plus-circle"></i> New Task
  </h1>

  <%= form_for(@task, html: { class: 'form' }) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, autocomplete: "off", class: 'form-control', placeholder: "Enter task title" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :details, class: 'form-label' %>
      <%= f.text_field :details, autocomplete: "off", class: 'form-control', placeholder: "Enter task details" %>
    </div>

    <div class="text-center">
      <%= f.submit "Create Task", class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to tasks_path, class: "btn btn-secondary" do %>
      <i class="fas fa-home"></i>
    <% end %>
  </div>
</div>
